body {
    background-image: url("retro_style_night_pattern_illuminated_hd_vaporwave.jpg");
    text-align: center;
    border-radius: 30px; 
    border: 5px solid #00ffea;
}

h1 {
    background-color:#00ffea; 
    border: 2px solid rgb(255, 0, 119);
    font-size:35px;
    text-align: center; 
    font-family: "OCR A";
    cursor: pointer;
}

p {
    color: #00ffea;
    font-size:25px; 
    font-family: "OCR A";
    cursor: pointer;
}

button {
    font-family: "Haettenschweiler"; 
    color: rgb(251, 194, 51);
    font-size: 30px;
    background-color:rgb(0, 0, 0);
    border: 2px solid rgb(255, 0, 119);
    border-radius: 13px;
    cursor: pointer;
    box-shadow: 3px 3px 1px rgb(221, 2, 39);
    opacity: 0.65;
    transition: 0.3s;
}
button:hover {opacity: 1}

/*The animation is continuous on page load. Still trying to figure out how to attach it to btn1 & btn2*/
#memeimage {
    width: 400px;
    height: 300px;
    animation: move linear 5s infinite alternate;
    transition: 3s;
  }
  @keyframes move {
    0% {
      transform: rotate(33deg);
    }
  
    50% {
      transform: rotate(-33deg);
    }
  };


       
    
   
